<%= form_with model: [@link.category, @link], local: true do |f| %>
<%= render '/shared/errors', object: @link %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :url %>
    <%= f.url_field :url %>

    <% if @link.category %>
        <%= f.hidden_field :category_id %>
    <% else %>
        <%= f.label :category_id %>
        <%= f.collection_select :category_id, Category.all, :id, :title %>
    <% end %>

    <%= f.submit %>
<% end %>