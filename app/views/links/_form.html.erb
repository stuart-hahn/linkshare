<%= form_with model: [@link.category, @link], local: true do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :url %>
    <%= f.url_field :url %>

    <% if !@link.category %>
        <%= f.label :category_id %>
        <%= f.collection_select :category_id, Category.all, :id, :title %></br>
    <% else %>
        <%= f.hidden_field :category_id %>
    <% end %>
    
    <%= f.submit %>
<% end %>