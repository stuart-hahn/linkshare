<h1><%= @category.title %></h1>

<p>Links:</p>
<ul>
<% @category.links.each do |link| %>
    <li>
    <%= link_to link.title, link_url %>
    <% if current_user.owns_link?(link) %>
        (<%= link_to "edit", edit_link_path(link) %>,
        <%= link_to "delete", link, method: :delete, data: { confirm: "Are you sure?" } %>)
    <% end %>
    </li>
<% end %>
</ul>